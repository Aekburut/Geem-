<% include ../partials/header %>
<h1 class="text-center">Search</h1>
<br>
    <input class="form-control btn-warning bg-light mb-2 mr-sm-2" id="myInput" type="text" placeholder="Search..">
<br>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Time</th>
            <th> <a class="btn btn-success" href="/insert" role="button">Add Products</a></th>
        </tr>
    </thead>
    <tbody id="myTable">
    <% products.forEach(function(product) { %>
        <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td><%= product.created_at %></td>
            <td>
            <a class="btn btn-info" href="/products/<%= product.id%>" role="button">Edit</a>
            </td>
            
            <td>
                <a class="btn btn-warning" href="/product_report/<%= product.id%>" role="button">Report</a>
            </td>
        </tr>
        <% }); %>
    </tbody>

    <script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
</table>



<% include ../partials/footer %>